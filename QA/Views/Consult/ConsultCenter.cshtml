
@{
    ViewBag.Title = "ConsultCenter";
}
@model IEnumerable<QA.ViewModels.ConsultCenterViewModel>
<h2>咨询中心</h2>

<style>

    tr th, td {
        vertical-align: middle;
        text-align: center;
    }

    .selectdo {
        width: 30%;
        margin-left: 20%;
    }

    .confirmbtn {
    }

    .active {
        pointer-events: none;
    }

    .lasttd {
        color: red;
        font-weight: bold;
    }

    .showtext {
        width: 100%;
        resize: none;
        overflow-y: scroll;
    }
</style>
<div id="mask" class="mask"></div>
<button type="button" class="btn btn-primary btn-lg " id="back">返回</button>
<div>
    <!--需要整个咨询元组和医生姓名，总页数，当前页码-->
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:12%">咨询编号</th>
                <th style="width:15%">创建日期</th>
                <th style="width:10%">咨询医生</th>
                <th style="width:10%">解答状态</th>
                <th style="width:5%">详情</th>
                <th style="width:14%">评分</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
            <tr>

                <td>@item.Consult.Id</td>
                <td>@item.Consult.create_date</td>
                <td>@item.CurrentDoctor.d_name</td>
                @switch (item.Consult.state)
                {
                    case 0:
                        <td><span class="label label-danger">未解答</span></td>
                        break;
                    case 1:
                        <td><span class="label label-primary">未评分</span></td>
                        break;
                    case 2:
                        <td><span class="label label-success">已解答</span></td>
                        break;
                }
                <td><a style="cursor:pointer" class="more" A_describe="@item.Consult.A_describe" Q_describe="@item.Consult.Q_describe" onclick="showDescribe(this)">更多</a></td>
                @if (item.Consult.state == 1)
                {
                    <td class="lasttd">
                        <select class="form-control col-lg-5 selectdo">
                            <option>0</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                        <button type="button" class="btn btn-success confirmbtn">确认</button>
                    </td>
                }
                else if (item.Consult.state == 0)
                {
                    <td class="lasttd">请先等待回答...</td>
                }
                else
                {
                    <td class="lasttd">@item.Consult.points</td>
                }
            </tr>
                }
            }


        </tbody>
    </table>
    <div style="text-align:center">
        <ul class="pagination pagination-sm">
            @{
                for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (ViewBag.PageIndex == i)
                    {
                        <li class="divide active"><a href="/Consult/ConsultCenter?pageIndex=@i">@i</a></li>
                    }
                    else
                    {
                        <li class="divide"><a href="/Consult/ConsultCenter?pageIndex=@i">@i</a></li>
                    }

                }

            }
        </ul>
    </div>

    <div class="container" style="width: 35%;position:absolute;left:35%;top:15%;z-index:1003;display:none" id="tankuang">
        <div class="panel panel-green">
            <div class="panel-heading">
                咨询详情
            </div>
            <div class="panel-body">
                <div class="input-group input-group-sm">
                    <span>咨询内容:</span>
                    <textarea readonly="readonly" class="showtext" rows="6" id="qtext"></textarea>
                    <span>解答内容:</span>
                    <textarea readonly="readonly" class="showtext" rows="6" id="atext"></textarea>
                </div>
                <!--按钮-->
                <div class="row" style="text-align: center; margin-top: 5px;">
                    <button type="button" class="btn btn-warning btn-circle btn-xs " id="dontdoit">
                        <i class="fa fa-times">关闭</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(".more").click(function () {
            mask();
            $("#tankuang").css("display", "block");
        })

        $("#back").click(function () {
            javascript: history.back();
        });

        $(".divide").click(function () {
            $(this).addClass("active");
            $(this).siblings().removeClass("active");
        })


        $(".confirmbtn").bind("click", function () {
            var c_no = $(this).parent().siblings(0).html();//获取编号
            var points = $(this).siblings(0).val(); // 评分分数
            var r = window.confirm("确认要评分为" + points + "吗?");
            if (r) {
                var item = $(this).parent();
                item.siblings().eq(3).empty();
                item.siblings().eq(3).append('<span class="label label-success">已解答</span>');
                $.ajax({
                    type: 'POST',
                    dataType: 'html',
                    url: "/Consult/ChangesPoints",
                    data: { "userId": c_no, "point": points },
                    success: function (data) {
                        item.empty();
                        item.append(points);//显示选择后的评分
                    }
                });
            } else {

            }

        })
    });
    function mask() {
        $("#mask").css("height", $(document).height());
        $("#mask").css("width", $(document).width());
        $("#mask").show();
    }

    $("#dontdoit").click(function () {
        $("#mask").hide();
        $("#tankuang").css("display", "none");
        $("#oldpas,#newpas,#cnewpas").val("");
    })

    //展示资源详情
    function showDescribe(obj) {
        $('#qtext').text($(obj).attr('Q_describe'));
        $('#atext').text($(obj).attr('A_describe'));
    }
</script>
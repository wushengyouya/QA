@model  QA.Models.Patient
@{
    ViewBag.Title = "PersonCenter";
}

<style>

</style>

<h2>个人中心</h2>
<div id="mask" class="mask"></div>
<div class="form-group col-lg-6">
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary btn-lg " id="back">返回</button>
    </div>

    <div class="col-sm-10" style="display:none">
        <input class="form-control" id="ID" type="text" placeholder="@Model.ID" disabled>
    </div>

    <label for="inputPassword" class="col-sm-2 control-label">
        账号
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="p_account" type="text" placeholder="@Model.p_account" disabled>
    </div>

    <!---->
    <label for="inputPassword" class="col-sm-2 control-label">
        姓名
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="p_name" type="text" placeholder="@Model.p_Name" disabled>
    </div>

    <!---->
    <label for="inputPassword" class="col-sm-2 control-label">
        身份证
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="IDcard" type="text" placeholder="@Model.Idcard." disabled>
    </div>

    <!---->
    <label for="inputPassword" class="col-sm-2 control-label">
        性别
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="p_sex" type="text" placeholder="@Model.p_sex." disabled>
    </div>


    <label for="inputPassword" class="col-sm-2 control-label">
        创建日期
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="enroll_date" type="text" placeholder="@Model.Enroll_date" disabled>
    </div>

    <label for="inputPassword" class="col-sm-2 control-label">
        电话号码
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="P_tel" type="text" placeholder="@Model.p_tel" disabled>
    </div>

    <label for="inputPassword" class="col-sm-2 control-label">
        出生日期
    </label>
    <div class="col-sm-10">
        <input class="form-control" id="birthday" type="text" placeholder="@Model.Birthday" disabled>
    </div>

    <button type="button" id="changepasw" class="btn btn-default">修改密码</button>
</div>

    <div class="container" style="width: 25%;position:absolute;left:35%;top:15%;z-index:1003;display:none" id="tankuang">
        <div class="panel panel-green">
            <div class="panel-heading">
                修改密码
            </div>
            <div class="panel-body">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><i class="fa fa-bullhorn fa-fw"></i></span>
                    <input type="text" class="form-control" placeholder="老密码" id="oldpas" />
                    <input type="password" class="form-control" placeholder="新密码" id="newpas" />
                    <input type="password" class="form-control" placeholder="确认新密码密码" id="cnewpas" />
                </div>
                <!--按钮-->
                <div class="row" style="text-align: center; margin-top: 5px;">
                    <button type="button" class="btn btn-info btn-circle btn-xs" style="margin-right: 40px;" id="doit">
                        <i class="fa fa-check">确认修改</i>
                    </button>
                    <button type="button" class="btn btn-warning btn-circle btn-xs " id="dontdoit">
                        <i class="fa fa-times">取消</i>
                    </button>
                </div>
            </div>
        </div>
    </div>

<script>
    $(function () {
        $("#changepasw").click(function () {
            $("#tankuang").css("display", "block");
            mask();
        })
        $("#back").click(function () {
            javascript: history.back();
        });
    });

    function mask() {
        $("#mask").css("height", $(document).height());
        $("#mask").css("width", $(document).width());
        $("#mask").show();
    }
    $("#dontdoit").click(function () {
        $("#mask").hide();
        $("#tankuang").css("display", "none");
        $("#oldpas,#newpas,#cnewpas").val("");
    })

    $("#doit").click(function () {
        if ($("#oldpas").val().trim() == "" || $("#newpas").val().trim() == "" || $("#cnewpas").val().trim() == "") {
            alert("请完善密码框");
        } else if ($("#newpas").val().trim() != $("#cnewpas").val().trim()) {
            alert("确认密码和新密码不相同！");
        } else {
            alert("成功");
            $("#oldpas,#newpas,#cnewpas").val("");
        }
    })
</script>
